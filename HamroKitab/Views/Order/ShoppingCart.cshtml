@using HamroKitab.Data.ViewModels;

@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping cart summary";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Your shopping cart items</h2>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Selected Items</th>
                    <th>Book</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Book.Name</td>
                        <td class="align-middle">@item.Book.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount*item.Book.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Order" asp-action="RemoveItemFromShoppingCart"
                           asp-route-id="@item.Book.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            |
                            <a class="text-success" asp-controller="Order" asp-action="AddItemToShoppingCart"
                           asp-route-id="@item.Book.Id">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.ShoppingCartTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-primary mr-5" asp-action="CompleteOrder">
                    CompleteOrder
                </a>
                
                <a class="btn btn-outline-success" asp-controller="Books" asp-action="Index">
                    Add more items 
                </a>
            </div>
        </div>
    </div>
</div>